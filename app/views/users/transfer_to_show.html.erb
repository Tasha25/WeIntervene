


<ul class="nav nav-pills pull-right">
  <li class="active">
    <li> <%= link_to 'Home', user_path(current_user) %></li>
  <li><a href="#">My Profile</a></li>
</ul>


<div class="row">
  <div class="col-md-12">
    <%= link_to 'Create New Referral', "/users/#{@user.id}/referrals/new_no_pic", class: 'btn btn-primary btn-small' %>
    <%= link_to 'Add Service Provider', "/users/#{@user.id}/service_providers/new", class: 'btn btn-primary btn-small'  %>
  <%= link_to 'Show all Service Providers', "/users/#{@user.id}/service_providers", class: 'btn btn-primary btn-small'  %>
  </div>
</div>


<br>


<div class="referrals">
  <h2> <%= @user.user_name.capitalize %>'s Referrals</h2>
  <table class="table table-striped">
    <tr>
      <td> Date</td>
      <td> Student</td>
      <td> Comment</td>
      <td> Resource</td>
    </tr>
    <% @user.referrals.each do |referral|  %>

    <tr>
      <td><%= referral.created_at.strftime("%m/%d/%Y") rescue nil %></td>
      <td><%= referral.student.first_name rescue nil %></td>
      <td><%= referral.comment.capitalize rescue nil %></td>

       <td>
      <% service_providers_array = [] %>
      <% referral.service_providers.each do |service_provider| %>

      <% service_providers_array << service_provider.name %>
      <% end %>
      <%= service_providers_array.join(', ') %>
    </tr>
    <% end  %>
    </td>
  </table>

</div> <!-- End Referrals Table -->