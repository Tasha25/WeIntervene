
<div class="referral-form">
   <div class="row">
      <h1 class="col-md-offset-2 col-md-8"> Referral Form </h1>
   </div>

   <%= form_for([@user, @referral ]) do |f| %>
      <div class="row">
         <div class="form-group col-md-8 col-md-offset-2">
            <%= f.select 'student_id', options_from_collection_for_select(Student.all, :id, :full_name), class: 'form-control ', cols: 10, rows: 5 %>
         </div>
      </div>

      <div class="row">
         <div class="form-group col-md-8 col-md-offset-2">
            <%= f.label 'Comment' %>
            <%= f.text_area 'comment', class: 'form-control ', cols: 10, rows: 5 %>
         </div>
      </div>

      <div class="row">
         <div class="col-md-offset-2 col-md-8">
            <h2>Service Proposed</h2>
            <% @service_providers.each do |service_provider|  %>
               <div class="checkbox">
                  <label>
                     <input type="checkbox" name="service_provider_ids" value="<%= service_provider.id %>">
                     <%= service_provider.name.capitalize %>
                  </label>
               </div>
            <% end %>
         </div>
      </div>

      <div class="row">
         <div class="col-md-8 col-md-offset-2">
            <h2>Service Category</h2>
            <% @service_categories.each do |category|  %>
               <div class="checkbox">
                  <label>
                     <input type="checkbox" name="service_categories_ids" value="<%= category.id %>">
                     <%= category.name.capitalize %>
                  </label>
               </div>
            <% end %>
         </div>
      </div>

      <div class="row">
         <div class="col-md-8 col-md-offset-2">
            <%= f.submit class: 'btn btn-primary btn-small' %>
         </div>
      </div>

      <%= f.hidden_field "user_id", :value=> @user.id %>

   <% end %>
</div>

