<div class="referral-form">
   <div class="row">
      <h1 class="col-md-offset-2 col-md-8"> Referral Form </h1>
   </div>
   <div class="row">
      <div class="student-demographic col-md-offset-2 col-md-8">
         <img class="col-sm-4" src="<%= @student.image_url %>">
         <div class="student-info col-md-6">
            <span class="name"><%= "#{@student.first_name} #{@student.last_name}" %></span>
            <span><%= @student.identification_number %></span>
            <span><%= @student.date_of_birth %></span>
            <address>
               <%= @student.street1 %>
               <%= @student.city %>, New York <%= @student.zip_code %>
            </address>
            <div>
               <span class="counselor">Counselor</span>&nbsp;<%= @student.counselor %>
            </div>
            <div>
               <span class="cohort">Cohort</span>&nbsp;<%= @student.cohort %>
            </div>
         </div>
      </div>
   </div>

   <%= form_for [@student, @referral] do |f| %>
      <div class="row">
         <div class="form-group col-md-8 col-md-offset-2">
          <h2>Comment</h2>
            <%= f.text_area 'comment', class: 'form-control ', cols: 10, rows: 5 %>
         </div>
      </div>

      <div class="row">
         <div class="col-md-offset-2 col-md-8">
            <h2>Service Proposed</h2>
            <% @service_providers.each do |service_provider|  %>
               <div class="checkbox">
                  <label>
                     <input type="checkbox" name="service_provider_ids" value="<%= service_provider.id %>">
                     <%= service_provider.name.capitalize %>
                  </label>
               </div>
            <% end %>
         </div>
      </div>

      <div class="row">
         <div class="col-md-8 col-md-offset-2">
            <h2>Service Category</h2>
            <% @service_categories.each do |category|  %>
               <div class="checkbox">
                  <label>
                     <input type="checkbox" name="service_categories_ids" value="<%= category.id %>">
                     <%= category.name.capitalize %>
                  </label>
               </div>
            <% end %>
         </div>
      </div>

      <div class="row">
         <div class="col-md-8 col-md-offset-2">
            <%= f.submit class: 'btn btn-primary btn-small' %>
         </div>
      </div>

      <%= f.hidden_field "user_id", :value=> @user.id %>
      <%= f.hidden_field "student_id", :value=> @student.id %>
   <% end %>
</div>
