<h1> WeIntervene Log in </h1>

<!-- We use form_tag here because we are not editing a resource. The form is submitted to a sessions_path  -->
<%= form_tag login_path do |f| %>

  <div class="row">
    <div class="form-group col-md-6">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] , :class=> "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-6">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, :class => ["form-control"] %>
    </div>
  </div>

  <div class="actions">
    <%= submit_tag "Log in", :class => "btn btn-default" %>&nbsp;<%= link_to "Back", root_path  %>
  </div>
<% end %>